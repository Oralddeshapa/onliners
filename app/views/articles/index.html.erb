<% flash.each do |name, msg| %>
  <%= msg %>
<% end %>
<div><%= link_to 'Add article', new_article_path %></div>


<table>
  <thead>
    <tr>
      <th>URL</th>
      <th>Score</th>
      <th>Last checked</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.url =%></td>
        <td><%= article.score ? article.score : 'Processing' =%></td>
        <td><%= article.updated_at =%></td>
        <td><%= link_to 'Show', article_path(article.id) =%></td>
      </tr>
    <% end %>
  </tbody>
</table>
